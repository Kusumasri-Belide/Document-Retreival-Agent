# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=your_chat_deployment_name
AZURE_OPENAI_EMBEDDING_MODEL=your_embedding_deployment_name

# Embedding Configuration
EMBEDDING_PROVIDER=azure
EMBEDDING_MODEL_NAME=text-embedding-ada-002

# Optional: OpenAI API (fallback)
OPENAI_API_KEY=your_openai_api_key_if_needed

# Optional: Hugging Face (for local embeddings)
HUGGINGFACE_API_TOKEN=your_huggingface_token_if_needed

# Microsoft Graph/OneDrive Configuration (if using OneDrive integration)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common

# Google OAuth (if using Google Drive integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Optional: Database Configuration
DATABASE_URL=sqlite:///./app.db

# Optional: Redis Configuration
REDIS_URL=redis://localhost:6379

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log